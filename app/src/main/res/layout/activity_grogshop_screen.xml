<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.grogshop_screen">

    //顶部
    <LinearLayout
        android:id="@+id/add_screen_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">


        <ImageButton
            android:id="@+id/close_btn"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/close_camera"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="筛选酒店"
            android:textSize="20sp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/scrrn_layout1"
        android:layout_below="@+id/add_screen_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格范围"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/now_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3000"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>
            <SeekBar
                android:id="@+id/screen_seekbar"
                android:layout_width="250dp"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:maxHeight="5.0dp"
                android:minHeight="5.0dp"
                android:progressDrawable="@drawable/sb_bar"
                android:thumb="@drawable/sb_thumb"/>
            <TextView
                android:id="@+id/max_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>//滑动条结束

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星级"
            android:textSize="17sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>
        //星级布局
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <CheckBox
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:background="@drawable/shape"
                android:button="@null"
                android:text="   *   "
                android:textColor="@drawable/select"
                android:layout_marginLeft="20dp"/>
            <CheckBox
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:background="@drawable/shape"
                android:button="@null"
                android:text="   *   "
                android:textColor="@drawable/select"
                android:layout_marginLeft="20dp"/>

            <CheckBox
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:background="@drawable/shape"
                android:button="@null"
                android:text="   *   "
                android:textColor="@drawable/select"
                android:layout_marginLeft="20dp"/>

            <CheckBox
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:background="@drawable/shape"
                android:button="@null"
                android:text="   *   "
                android:textColor="@drawable/select"
                android:layout_marginLeft="20dp"/>

            <CheckBox
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:background="@drawable/shape"
                android:button="@null"
                android:text="   *   "
                android:textColor="@drawable/select"
                android:layout_marginLeft="20dp"/>



        </LinearLayout>//星级布局结束

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旅行必备"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>