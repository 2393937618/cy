<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.destination">


    //顶部
    <LinearLayout
        android:id="@+id/add_destinaton_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">


        <ImageButton
            android:id="@+id/close_btn"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/top_return"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目的地名称"
            android:textSize="20sp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            />
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/share"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/destinationName_layout"
        android:layout_below="@+id/add_destinaton_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/local_country"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定位到这里"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/destinationName_layout2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/destinationName_layout"
        android:orientation="horizontal">
        <!--放置百度地图-->


        <fragment
            android:id="@+id/fragment"
            android:name="com.baidu.mapapi.map.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/destination_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/destinationName_layout2"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="景点名称"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="景点简介，描述"/>
        <!--<ImageButton-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:background="@drawable/more"-->
            <!--android:layout_marginLeft="320dp"/>-->
        //定位布局结束

    </LinearLayout>//景点简介布局结束

    <TextView
        android:id="@+id/destination_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户点评"
        android:textSize="18sp"
        android:layout_below="@+id/destination_layout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:id="@+id/destination_layout1"
        android:layout_below="@+id/destination_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        //发表动态布局

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/tx1" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="15dp"
                android:text="用户名"
                android:textSize="15sp" />


        </LinearLayout>//发表动态布局结束
        <TextView
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:text="用户评论内容"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:src="@drawable/fg"/>

    </LinearLayout>




</RelativeLayout>