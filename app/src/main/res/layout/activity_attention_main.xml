<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.attention_main"

    android:orientation="vertical">
    //顶部按钮
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:id="@+id/photo"
            android:layout_width="32dp"
            android:layout_height="25dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/camera"/>
        <ImageButton
            android:id="@+id/search"
            android:layout_width="240dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/search"/>
        <ImageButton
            android:id="@+id/newss"
            android:layout_width="32dp"
            android:layout_height="27dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/view_top"/>

    </LinearLayout>//顶部按钮结束
    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_alignParentLeft="true">
        <RadioGroup
            android:id="@+id/rg_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="8dp"
                android:button="@null"
                android:text="推荐"
                android:textSize="18sp"
                android:textColor="@drawable/select"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="8dp"
                android:button="@null"
                android:text="关注"
                android:textSize="18sp"
                android:textColor="@drawable/select"
                />
            <RadioButton
                android:id="@+id/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="8dp"
                android:button="@null"
                android:text="圈子"
                android:textSize="18sp"
                android:textColor="@drawable/select"
                />
        </RadioGroup>
    </LinearLayout>




    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attention_list"
        android:layout_below="@+id/layout3"
        android:layout_above="@+id/layout1">

    </ListView>















    //底部布局
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        >
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            >
            <RadioButton
                android:id="@+id/bottom_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/planetearth_three"
                android:button="@null"
                android:text="推荐"
                android:drawablePadding="2dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="3dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_btn2"
                android:drawableTop="@drawable/not_click_find"
                android:button="@null"
                android:text="发现"
                android:textColor="@color/js_one"
                android:drawablePadding="2dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="3dp"/>
            <ImageButton
                android:id="@+id/bottom_add"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/add"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_btn3"
                android:drawableTop="@drawable/not_click_trip"
                android:button="@null"
                android:text="行程"
                android:drawablePadding="2dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="3dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_btn4"
                android:drawableTop="@drawable/not_click_my"
                android:button="@null"
                android:text="我的"
                android:drawablePadding="2dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="3dp"/>

        </RadioGroup>

    </LinearLayout>//底部布局结束

</RelativeLayout>