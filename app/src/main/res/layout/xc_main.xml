<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffdf6">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/wodexinchengben" />

    //底部布局
    <LinearLayout
        android:id="@+id/layout1_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#F8F8FF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        >
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            >

            <RadioButton
                android:id="@+id/tj2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="3dp"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/planetearth_three"
                android:text="推荐" />
            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fx"
                android:drawableTop="@drawable/saturn"
                android:button="@null"
                android:text="发现"

                android:drawablePadding="2dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="3dp"/>
            <ImageButton
                android:id="@+id/jr"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/add"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                />

            <RadioButton
                android:id="@+id/xc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="3dp"
                android:button="@null"

                android:drawablePadding="2dp"
                android:drawableTop="@drawable/rectangularsuitcase"
                android:text="行程"
                android:textColor="@color/js_one" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wd"
                android:drawableTop="@drawable/people"
                android:button="@null"
                android:text="我的"

                android:drawablePadding="2dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="3dp"/>

        </RadioGroup>

    </LinearLayout>
    //底部布局结束

    <LinearLayout
        android:id="@+id/xc_search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_margin="5dp"
        android:background="@color/ks_one"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/xc_search_img"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/backgroundcolor"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/lloupe" />
    </LinearLayout>

    <ListView
        android:id="@+id/xc_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/xc_search_layout" />


</RelativeLayout>
