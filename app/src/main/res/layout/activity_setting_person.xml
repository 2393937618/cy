<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fffdf6"
    tools:context=".main.SettingPerson">

    <ImageView
        android:id="@+id/gerenxinxibtn-1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/shizhizhuye3" />

    <TextView
        android:text="设置个人信息"
        android:textSize="22sp"
        android:id="@+id/imageView2"
        android:layout_marginTop="-5dp"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/gerenxinxibtn-1"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/gerenxinxi9" />

    <TextView
        android:id="@+id/setting_save"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="23dp"
        android:background="@android:color/transparent"
        android:text="保存"
        android:textSize="20sp"
        android:layout_marginTop="-3dp"/>

    <ImageView
        android:id="@+id/gerenxinxibtn-3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/gerenxinxi11" />

    <ImageView
        android:id="@+id/gerenxinxibtn-4"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/gerenxinxibtn-3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/gerenxinxi8" />

    <TextView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/gerenxinxibtn-1"
        android:layout_alignStart="@+id/gerenxinxibtn-1"
        android:layout_below="@+id/gerenxinxibtn-4"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:text="昵称："
        android:textSize="20sp"
        app:srcCompat="@drawable/gerenxinxi7" />

    <TextView
        android:text="性别："
        android:textSize="20sp"
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/gerenxinxi12" />

    <TextView
        android:text="生日："
        android:textSize="20sp"
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/imageView10"
        android:layout_alignStart="@+id/imageView10"
        android:layout_below="@+id/imageView10"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/gerenxinxi10" />

    <TextView
        android:text="住址："
        android:textSize="20sp"
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/imageView13"
        android:layout_alignStart="@+id/imageView13"
        android:layout_below="@+id/setting_birthday"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/gerenxinxi3" />

    <TextView
        android:text="简介："
        android:textSize="20sp"
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/imageView15"
        android:layout_alignStart="@+id/imageView15"
        android:layout_below="@+id/imageView15"
        android:layout_marginTop="23dp"
        app:srcCompat="@drawable/gerenxinxi5" />

    <EditText
        android:id="@+id/setting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView10"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:ems="10"
        android:background="@drawable/bg_edittext_selector"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/setting_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/setting_name"
        android:layout_alignStart="@+id/setting_name"
        android:layout_below="@+id/setting_name"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edittext_selector"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/setting_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_sex"
        android:layout_toEndOf="@+id/imageView13"
        android:layout_toRightOf="@+id/imageView13"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edittext_selector"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/setting_address"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gerenxinxibtn-3"
        android:layout_alignTop="@+id/imageView15"
        android:layout_alignEnd="@+id/setting_birthday"
        android:layout_alignRight="@+id/setting_birthday"
        android:layout_alignBottom="@+id/imageView15"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="-70dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/imageView15"
        android:background="@drawable/bg_edittext_selector"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/setting_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView16"
        android:layout_alignLeft="@+id/setting_address"
        android:layout_alignStart="@+id/setting_address"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edittext_selector"
        android:inputType="textPersonName" />
</RelativeLayout>
