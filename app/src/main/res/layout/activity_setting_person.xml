<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F7F6FB"
    tools:context=".main.SettingPerson"
    android:layout_gravity="center"
    android:layout_centerHorizontal="true">


    <ImageView
        android:id="@+id/update_return"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/shizhizhuye3" />


    <TextView
        android:id="@+id/update_text"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:text="设置信息"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>



    <LinearLayout
        android:id="@+id/update_layout_2"
        android:layout_below="@+id/update_layout_1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center">


        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="性别:"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/update_sex"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/edittext_radius_res"
            android:hint="请选择性别"
            android:textSize="12sp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/update_layout_3"
        android:layout_below="@+id/update_layout_2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center">


        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="时间:"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/update_data"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/edittext_radius_res"
            android:hint="请选择出生日期"
            android:textSize="12sp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/update_layout_4"
        android:layout_below="@+id/update_layout_3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center">


        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="住址:"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/update_address"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/edittext_radius_res"
            android:hint="请选择住址"
            android:textSize="12sp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/update_layout_5"
        android:layout_below="@+id/update_layout_4"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center">


        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="简介:"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/update_show"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/edittext_radius_res"
            android:hint="输入个性签名"
            android:textSize="12sp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/update_layout_1"
        android:layout_below="@+id/update_text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center">


        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="昵称:"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/update_name"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/edittext_radius_res"
            android:hint="输入用户名"
            android:textSize="12sp"
            />

    </LinearLayout>



    <Button
        android:id="@+id/setting_btn"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/person_radius_res"
        android:layout_below="@id/update_layout_5"
        android:text="保存"
        android:textAlignment="center"/>





