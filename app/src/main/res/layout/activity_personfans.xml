<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffdf6"
    tools:context=".main.Personfans">

    <ImageView
        android:id="@+id/guanzhubtn1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/shizhizhuye3" />

    <TextView
        android:id="@+id/fanstext"
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:layout_alignTop="@+id/guanzhubtn1"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:text="所有粉丝"
        android:layout_marginTop="-8dp"
        android:textSize="18sp"/>

    <com.example.lxc.cy.other.MyImageView
        android:id="@+id/fansimage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="102dp"
        android:layout_height="101dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp"
        />








    <ListView
    android:id="@+id/fans_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/img" />

</RelativeLayout>
