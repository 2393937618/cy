<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#F7F6FB"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/login_return"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/shizhizhuye3" />


    <TextView
        android:id="@+id/login_text"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:text="登录"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>


    <TextView
        android:id="@+id/login_text2"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="登录畅游，游遍世界"
        android:textSize="17sp"
        android:layout_below="@+id/login_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/login_text2"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittext_radius_res"
        >



        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/atar"
            android:layout_marginLeft="50dp"/>

        <EditText
            android:id="@+id/login_username"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_gravity="center"
            android:background="@drawable/edittext_radius_res"
            android:hint="输入手机号码"
            android:textSize="13sp"
            android:inputType="phone" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_layout2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/login_layout"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittext_radius_res"
        >



        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/dlock"
            android:layout_marginLeft="50dp"/>

        <EditText
            android:id="@+id/login_password"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_gravity="center"
            android:background="@drawable/edittext_radius_res"
            android:hint="输入密码"
            android:textSize="13sp"
            android:inputType="textPassword" />



    </LinearLayout>


    <Button
        android:id="@+id/login_btn"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/person_radius_res"
        android:layout_below="@id/login_layout2"
        android:text="登录"
        android:textAlignment="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/loginToRegister"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="注册"
            android:textSize="15sp"
            android:layout_weight="10"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/WeChat"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@drawable/weixin"
            android:layout_weight="0.1"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/WeiBo"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@drawable/osociallogo"
            android:layout_weight="0.1"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/QQ"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@drawable/logo"
            android:layout_weight="0.1"
            android:layout_marginRight="20dp"/>

    </LinearLayout>




</RelativeLayout>
