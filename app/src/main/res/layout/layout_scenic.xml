<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/btn_radius_res"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/begin"
            />
        <TextView
            android:id="@+id/scenic_city_name"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:hint="城市名称"
            android:layout_gravity="center"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/view"/>
        <TextView
            android:id="@+id/scenic_view"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:maxLines="6"
            android:hint="点击选择景点"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/live"/>
        <TextView
            android:id="@+id/scenic_live"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:maxLines="6"
            android:hint="点击选择住宿"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/food"/>
        <TextView
            android:id="@+id/scenic_food"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:maxLines="6"
            android:gravity="center"
            android:hint="点击选择饭店"
            />

    </LinearLayout>

</LinearLayout>