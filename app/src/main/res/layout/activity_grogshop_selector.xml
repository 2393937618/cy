<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.grogshop_selector">
    //顶部
    <LinearLayout
        android:id="@+id/add_grogshopsel_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">


        <ImageButton
            android:id="@+id/close_btn"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/top_return"
            />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/map"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="10dp"
            />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/add"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/grogshopsel_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day1"
        android:textSize="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/add_grogshopsel_top"/>

    <LinearLayout
        android:id="@+id/grogsho_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/grogshopsel_text1">
        <TextView
            android:id="@+id/grogshopsel_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/grogshopsel_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点"
            android:textSize="20sp"
            android:layout_below="@id/grogshopsel_text2"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>


    //一天安排布局
    <LinearLayout
        android:id="@+id/grogshop_layoutone"
        android:layout_below="@id/grogsho_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/search_jd"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="30dp"

                android:background="#EBEBEB"
                android:layout_marginLeft="80dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50m"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="150dp"
                android:textSize="18sp"/>
        </RelativeLayout>
    </LinearLayout>//一天布局结束

    //一天安排布局
    <LinearLayout
        android:id="@+id/grogshop_layouttwo"
        android:layout_below="@+id/grogshop_layoutone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/search_jd"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="30dp"

                android:background="#EBEBEB"
                android:layout_marginLeft="80dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50m"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="150dp"
                android:textSize="18sp"/>
        </RelativeLayout>
    </LinearLayout>//一天布局结束


    //一天安排布局
    <LinearLayout
        android:id="@+id/grogshop_layoutthree"
        android:layout_below="@+id/grogshop_layouttwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/search_jd"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="30dp"

                android:background="#EBEBEB"
                android:layout_marginLeft="80dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50m"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="150dp"
                android:textSize="18sp"/>
        </RelativeLayout>
    </LinearLayout>//一天布局结束


    //一天安排布局
    <LinearLayout
        android:id="@+id/grogshop_layoutfour"
        android:layout_below="@+id/grogshop_layoutthree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/search_jd"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="30dp"

                android:background="#EBEBEB"
                android:layout_marginLeft="80dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50m"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="150dp"
                android:textSize="18sp"/>
        </RelativeLayout>
    </LinearLayout>//一天布局结束





</RelativeLayout>