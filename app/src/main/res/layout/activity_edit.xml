<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.editActivity">

    //顶部
    <LinearLayout
        android:id="@+id/add_edit_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">


        <ImageButton
            android:id="@+id/close_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/top_return"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布"
            android:textSize="15sp"
            android:id="@+id/issue"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>
    <EditText
        android:id="@+id/content_text"
        android:layout_width="330dp"
        android:layout_height="200dp"
        android:layout_below="@+id/add_edit_top"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:hint="说点什么吧~~"
        android:background="@null"
        />
    <ImageView
        android:id="@+id/photo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/plus"
        android:layout_below="@+id/content_text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/e_view"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>



    <LinearLayout
        android:id="@+id/edit_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/e_view">
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/my_location"/>
        <EditText
            android:id="@+id/place_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:textSize="13sp"
            android:hint="分享位置"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/edit_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/edit_layout1">
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/quanzi"/>
        <EditText
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:textSize="13sp"
            android:hint="设置圈子"/>


    </LinearLayout>



</RelativeLayout>