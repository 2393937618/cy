<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F6FB"
    tools:context=".main.PersonAttention">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/person_collection_layout">


        <ImageButton
            android:id="@+id/person_collection_return"
            android:layout_width="10dp"
            android:layout_height="17dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/top_return"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="我的收藏"
            android:textSize="16sp"
            android:layout_weight="55"/>



    </LinearLayout>



    <ListView
        android:id="@+id/person_collection_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/person_collection_layout">

    </ListView>

</RelativeLayout>
