<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    //顶部
    <LinearLayout
        android:id="@+id/add_inform_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">


        <ImageButton
            android:id="@+id/close_informbtn"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/top_return"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知"
            android:textSize="20sp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>
    <ImageButton
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:id="@+id/news_ss"
        android:background="@drawable/news_ss"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/add_inform_top"/>
    <LinearLayout
        android:id="@+id/inform_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/news_ss"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/inform_xt"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统消息"
            android:textSize="18sp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="15dp"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/more"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inform_layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/inform_layout1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/inform_hd"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="互动消息"
            android:textSize="18sp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="15dp"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/more"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/inform_layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/inform_layout2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/inform_activity"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动消息"
            android:textSize="18sp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="15dp"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/more"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inform_layout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/inform_layout3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/inform_cx"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出行助手"
            android:textSize="18sp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="15dp"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/more"/>
    </LinearLayout>



</RelativeLayout>