    <LinearLayout
        android:id="@+id/layout1_1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#f8f8f8"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/person_recommend"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:button="@null"
                android:text="推荐"
                android:textColor="@color/bottom_text_false"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_weight="5"
                />
            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:id="@+id/person_find"
                android:button="@null"
                android:text="发现"
                android:textColor="@color/bottom_text_false"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_weight="5"
                android:layout_marginRight="10dp"/>
            <ImageButton
                android:id="@+id/person_add"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/add"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:textAlignment="center"
                android:layout_weight="0.2"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:id="@+id/person_trip"
                android:textColor="@color/bottom_text_false"
                android:button="@null"
                android:text="行程"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_weight="5"
                android:layout_marginLeft="10dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:id="@+id/person_my"
                android:checked="true"
                android:button="@null"
                android:text="我的"
                android:textSize="12sp"
                android:textColor="@color/bottom_text_true"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_weight="5"/>

        </RadioGroup>

