<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    //圈子展示布局
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        //圈子标题布局
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/circle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开心圈子"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"

                />
            <ImageView
                android:id="@+id/circle_hot"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/hot"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"/>

            <ImageButton
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/more"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="200dp"/>

        </LinearLayout>//圈子标题布局结束
        //评论语句
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/circle_img"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:background="@drawable/fm19"/>
            //不包含图片圈子评论
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="6dp">
                <TextView
                    android:id="@+id/circle_comment"
                    android:layout_width="250dp"
                    android:layout_height="65dp"
                    android:text="哈哈哈"
                    android:textSize="16sp"
                    />
                //圈子发布人信息
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/circle_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="zzk"
                        />
                    <TextView
                        android:id="@+id/circle_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019年5月21日"
                        android:layout_marginLeft="90dp"/>
                </LinearLayout>//圈子发布人信息结束
            </LinearLayout>//不包含图片评论布局


        </LinearLayout>//评论语句结束
    </LinearLayout>//圈子展示布局结束



</LinearLayout>